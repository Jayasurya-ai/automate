<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".AddDevice">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_marginTop="-70dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:src="@drawable/register_designb" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_marginTop="-90dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/register_designa" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_marginTop="-120dp"
        android:id="@+id/design3"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:src="@drawable/register_design" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/database"
        android:id="@+id/database"
        android:layout_below="@+id/design3"
        android:layout_marginTop="100dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Add Device"
        android:id="@+id/phonesignin"
        android:textColor="@android:color/white"
        android:textSize="17dp"
        android:fontFamily="@font/averia_sans_libre_bold"
        android:textAllCaps="false"
        android:layout_below="@+id/database"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_styleb"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_marginBottom="-90dp"
        android:layout_marginStart="2dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="2dp"
        android:src="@drawable/register_designbdown" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_marginBottom="-90dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:src="@drawable/register_designadown" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_marginBottom="-120dp"

        android:layout_alignParentBottom="true"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:src="@drawable/register_designdown" />






</RelativeLayout>